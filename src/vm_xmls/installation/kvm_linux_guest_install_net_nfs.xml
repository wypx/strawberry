<domain type="kvm">
  <name>GUESTNAME</name>
  <memory>MEMORY</memory>
  <vcpu>VCPU</vcpu>
  <os>
    <type machine="GUESTMACHINE">hvm</type>
    <kernel>KERNEL</kernel>
    <initrd>INITRD</initrd>
    <cmdline>ks=KS</cmdline>
    <boot dev="hd"/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <clock offset="utc"/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <disk device="disk" type="file">
      <driver name="qemu" type='IMAGEFORMAT'/>
      <source file='DISKPATH'/>
      <target bus='HDDRIVER' dev='DEV'/>
    </disk>
    <interface type='direct'>
      <mac address='MACADDR'/>
      <source dev='INTERFACE' mode='bridge'/>
      <target dev='macvtap0'/>
      <model type='NICDRIVER'/>
    </interface>
    <console/>
    <input bus="ps2" type="mouse"/>
    <graphics port="-1" autoport="yes" type="GRAPHIC"/>
    <video>
      <model type='VIDEO' vram='16384' heads='1'/>
    </video>
    <channel type='unix'>
      <source mode='bind' path='/var/lib/libvirt/qemu/GUESTNAME.agent'/>
      <target type='virtio' name='org.qemu.guest_agent.0'/>
    </channel>
  </devices>
</domain>
